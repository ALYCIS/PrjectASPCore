@model PrjectASPCore.ViewModels.BookListViewModel

@{
    Layout = "_Layout";
}



    <ul>
        @{
            foreach (var book in Model.Books)
            {
                <li>
                    <ul>
                        <li>
                            <img src="@book.UrlImag" />
                            <h1>@book.Name</h1>
                            <h2>@book.Description</h2>
                            <h3>@book.Price £</h3>
                        </li>
                    </ul>
                </li>
            }
        }

    </ul>


