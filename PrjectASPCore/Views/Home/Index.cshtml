@model PrjectASPCore.ViewModels.BookListViewModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout1";
}

@Html.ActionLink("Aller vers la liste des livres", "ListBooks", "Book")
<br />
<a href="/Book/ListBooks"> List des livres</a>


<div class="container text-center">
    <div class="row">
        @foreach (var book in Model.Books)
        {
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@book.UrlImag" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@book.Name</h5>
                            <p class="card-text">@book.Description</p>
                            <p class="card-text"><small class="text-muted">@book.Price.ToString("c")</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>












